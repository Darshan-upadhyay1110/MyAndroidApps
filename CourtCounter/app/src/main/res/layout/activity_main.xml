<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TeamA"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_margin="8dp"/>
            <Button
                android:id="@+id/TeamA_3_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 points"
                android:layout_margin="8dp"
                android:onClick="Athree_pts"/>
            <Button
                android:id="@+id/TeamA_2_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 points"
                android:layout_margin="8dp"
                android:onClick="Atwo_pts"/>
            <Button
                android:id="@+id/TeamA_Free_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw "
                android:layout_margin="8dp"
                android:onClick="Afree_pts"/>



        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TeamB"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_margin="8dp"/>
            <Button
                android:id="@+id/TeamB_3_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 points"
                android:layout_margin="8dp"
                android:onClick="Bthree_pts"/>
            <Button
                android:id="@+id/TeamB_2_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 points"
                android:layout_margin="8dp"
                android:onClick="Btwo_pts"/>
            <Button
                android:id="@+id/TeamB_Free_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw "
                android:layout_margin="8dp"
                android:onClick="Bfree_pts"/>



        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="reset"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="80dp"/>


</RelativeLayout>


